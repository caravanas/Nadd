                @Html.DisplayNameFor(model => model.Disciplina[0].CargaHoraria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].Periodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina[0].Ano)
